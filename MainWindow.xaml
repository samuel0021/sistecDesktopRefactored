<Window x:Class="sistecDesktopRefactored.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sistecDesktopRefactored"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--#region Row/Column Definitions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <Border Grid.Row="0" Padding="15"
                Background="{StaticResource brush-midnightNavy}"
                BorderBrush="{StaticResource brush-White}"
                BorderThickness="0 0 0 0.5">

            <Image Source="/images/sistec-white.png" Margin="10"/>
        </Border>

        <Border Grid.Row="1" Padding="15"
                Background="{StaticResource brush-midnightNavy}"/>
    </Grid>
</Window>

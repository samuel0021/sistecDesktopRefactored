<Window x:Class="sistecDesktopRefactored.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sistecDesktopRefactored"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:viewModels="clr-namespace:sistecDesktopRefactored.ViewModels"
        xmlns:helpers="clr-namespace:sistecDesktopRefactored.Helpers"
        xmlns:converters="clr-namespace:sistecDesktopRefactored.Converters"
        mc:Ignorable="d"
        Title="Sistec" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>


    <Grid>
        <!-- Região raiz da aplicação -->
        <ContentControl prism:RegionManager.RegionName="ShellRegion" />

        <!-- Loading Overlay -->
        <Border Background="#80000000"
        Visibility="{Binding BusyService.IsBusy,
                     Converter={StaticResource BoolToVisibilityConverter}}"
        Panel.ZIndex="999"/>
    </Grid>
</Window>

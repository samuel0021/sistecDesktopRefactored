<UserControl x:Class="sistecDesktopRefactored.Views.MessageDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sistecDesktopRefactored.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:converters="clr-namespace:sistecDesktopRefactored.Converters"
             xmlns:helpers="clr-namespace:sistecDesktopRefactored.Helpers"
             mc:Ignorable="d" 
             d:DesignWidth="400" d:DesignHeight="300"
             Width="400" Height="300">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        </Style>
    </prism:Dialog.WindowStyle>

    <Grid Background="{StaticResource brush-lavenderMist}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--#region Header -->
        <Border Grid.Row="0" 
            Background="{StaticResource brush-peachOrange}"
            BorderBrush="Transparent">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Images/triangle-alert-white.png" 
                    Width="24" Height="24"
                    Margin="20 0 10 0"/>
                <TextBlock Text="Confirmar Saída" Foreground="{StaticResource brush-White}"
                    FontFamily="{StaticResource MontserratBold}"
                    VerticalAlignment="Center"
                    Margin="0 20"
                    FontSize="24"/>
            </StackPanel>
        </Border>
        <!--#endregion -->

        <!--#region Image/Text -->
        <StackPanel Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Border Margin="15"
                Background="{StaticResource brush-mistyRose}"
                Width="80" Height="80"
                CornerRadius="50">
                <Image Source="/Images/log-out-big.png"
                    Width="48" Height="48"/>
            </Border>

            <TextBlock Text="Tem certeza que deseja sair do sistema?"
                FontFamily="{StaticResource MontserratBold}"
                Foreground="{StaticResource brush-midnightNavy}"
                TextAlignment="Center"/>
            <TextBlock Text="Você precisará fazer login novamente para acessar."
                FontFamily="{StaticResource MontserratRegular}"
                Foreground="{StaticResource brush-coolGray}"
                TextAlignment="Center"/>
        </StackPanel>
        <!--#endregion -->

        <!--#region Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Button Content="Cancelar"
                Style="{StaticResource ButtonImage}"
                Background="Transparent"
                Foreground="{StaticResource brush-coolGray}"
                BorderBrush="{StaticResource brush-frenchGray}"
                Tag="/Images/undo-coolgray.png"
                Margin="10"/>
            <Button Content="Sim, sair"
                Style="{StaticResource ButtonImage}"
                Background="{StaticResource brush-peachOrange}"
                FontFamily="{StaticResource MontserratRegular}"
                Foreground="{StaticResource brush-White}"
                BorderBrush="Transparent"
                Tag="/Images/log-out-white.png"
                Margin="10"/>
        </StackPanel>
        <!--#endregion -->
    </Grid>
</UserControl>

<UserControl x:Class="sistecDesktopRefactored.Views.TicketsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sistecDesktopRefactored.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">


    <Grid>
        <!--#region Row Definitions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--#region Header-->
        <StackPanel Orientation="Horizontal">
            <Border Background="Transparent" BorderBrush="Blue" 
                    BorderThickness="1"
                    CornerRadius="2" Margin="10" Width="45" Height="45">

                <Image Source="/Images/list.png" Width="40" Height="40"/>
            </Border>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Todos os Chamados" FontSize="30" Margin="10 0 0 0"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource MontserratBold}"/>


                <TextBlock Text="Gerencie e acompanhe todos os chamados do sistema"
                    FontFamily="{StaticResource MontserratRegular}" FontSize="12"
                    Margin="10 0 0 0"/>
            </StackPanel>
        </StackPanel>
        <!--#endregion-->

        <!--#region DataGrid-->
        <Border Grid.Row="1"
            Style="{StaticResource BorderPanel}">

            <Grid>
                <!--#region Row Definitions-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <!--#endregion-->

                <TextBlock Text="Chamados Recentes" Margin="10"
                    VerticalAlignment="Center" FontSize="18"
                    FontFamily="{StaticResource MontserratBold}"/>

                <StackPanel Grid.Column="1"
                    Orientation="Horizontal" HorizontalAlignment="Right"
                    Margin="10">

                    <TextBox Text="Pesquisar chamados" VerticalContentAlignment="Center"
                        Margin="5" Width="150" Height="40"
                        FontFamily="{StaticResource MontserratRegular}"/>

                    <Button Content="Ver Escalados"
                        Margin="5" Height="40"
                        Tag="/Images/trending-up.png"
                        BorderBrush="{StaticResource brush-frenchGray}"
                        FontFamily="{StaticResource MontserratBold}"
                        Foreground="{StaticResource brush-vibrantViolet}"
                        Style="{StaticResource ButtonImage}"/>

                    <Button Content="Atualizar"
                        Margin="5" Height="40"
                        Tag="/Images/rotate-ccw-orange.png"
                        BorderBrush="{StaticResource brush-frenchGray}"
                        FontFamily="{StaticResource MontserratBold}"
                        Foreground="{StaticResource brush-peachOrange}"
                        Style="{StaticResource ButtonImage}"/>

                </StackPanel>

                <DataGrid Grid.Row="1" Grid.ColumnSpan="2">

                </DataGrid>
            </Grid>
        </Border>
        <!--#endregion-->
    </Grid>
</UserControl>
